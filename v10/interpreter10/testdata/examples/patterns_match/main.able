package parity.examples.patterns

struct Point {
  x: i32,
  y: i32
}

fn classify(point: Point) -> string {
  point match {
    case Point { x, y } if x == 0 && y == 0 => "origin",
    case Point { x, y } if x == y => `diagonal (${x})`,
    case Point { x, y } if x + y == 0 => `mirror (${x}, ${y})`,
    case Point { x, y } if x > y => `x-dominant (${x}, ${y})`,
    case Point { x, y } => `point (${x}, ${y})`
  }
}

fn print_classifications(points: Array Point) -> void {
  for point in points {
    print(classify(point))
  }
}

fn main() {
  points := [
    Point { x: 0, y: 0 },
    Point { x: 3, y: 3 },
    Point { x: 4, y: -4 },
    Point { x: 5, y: 1 },
    Point { x: 2, y: 7 }
  ]
  print_classifications(points)
}
