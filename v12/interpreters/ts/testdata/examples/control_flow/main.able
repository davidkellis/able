package control

fn sum_even(values: Array i32) -> i32 {
  total := 0
  for value in values {
    if value % 2 == 0 {
      total = total + value
    }
  }
  total
}

fn describe(values: Array i32) -> void {
  print(`Input: ${values}`)
  print(`Even sum: ${sum_even(values)}`)
}

fn main() {
  describe([1, 2, 3, 4, 5, 6])
}
